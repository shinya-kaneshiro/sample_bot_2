<% provide(:title, 'Challenge') %>
<% provide(:button_text, '答えを表示する') %>

<div class="jumbotron jumbotron-none jumbotron-long">
  <div class="row form-row-common">
    <h1 class="headline">Against the forgetting curve</h1>
    <%= render 'shared/error_messages', object: @user %>
    <%= render 'shared/flash_messages' %>
  </div>

<div class="container">
  <div class="row">

    <div class="col-lg-6">
      <div class="card">
        <div class="card-header challenge-question">
          <%= "問題ID: #{@question.id}"%>
        </div>
        <div class="card-body d-flex align-items-center justify-content-center">
          <div><h5 class="card-title"><%= @question.question%></h5></div>
        </div>
      </div>
      <div class="text-right"><%= link_to "他の問題", new_user_challenge_path, class: "btn btn-info" %></div>

      <div class="input-group challenge-margin">
        <div class="input-group-prepend">
          <span class="input-group-text challenge-input">回答入力欄</span>
        </div>
        <textarea class="form-control" aria-label="With textarea" rows="7"></textarea>
      </div>

      <div class="form-content-common challenge-margin">
        <div id="ajax-request">
            <%= form_with url: user_challenges_ajax_update_path, local: false do |f| %>
              <div class="button-group">
                <a class="btn-content bs-lg cubic">
                  <span class="hovering"><%= f.submit yield(:button_text), class: "submit-layout a-side" %></span>
                  <span class="default"><%= f.submit yield(:button_text), class: "submit-layout b-side" %></span>
                </a>
              </div>
            <% end %>
        </div>
      </div>


    </div>


    <div class="col-lg-6">

      <div class="card d-flex align-items-center justify-content-center">
        <div class="card-body" id="ajax-test">正解表示欄
        </div>
      </div>

    </div>

    <div class="col-12">
      <div class="proficiency-aria">
      <%= form_with(url: user_challenges_update_proficiency_path, method: :patch, local: true) do |f| %>
        <label><%= f.radio_button :value, 1, checked: true %>1</label>
        <label><%= f.radio_button :value, 2 %>2</label>
        <label><%= f.radio_button :value, 3 %>3</label>
        <%= f.submit "次の問題", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
      <% end %>
      </div>
    </div>



  </div>
</div>
