<% provide(:title, "Qestion index") %>

<div class="jumbotron jumbotron-none jumbotron-long">
  <div class="container">
    <div class="row form-row-common">
     <h1 class="headline">Against the forgetting curve</h1>
     <%= render 'shared/flash_messages' %>

   <div class="willpaginate-button-top"><%= will_paginate %></div>
    <table class="table table-bordered table-striped table-common">
      <thead class="table-column">
        <tr>
          <th class="col-1 align-middle text-center">ID</th>
          <th class="col-3 align-middle text-center">問題</th>
          <th class="col-5 align-middle text-center">回答</th>
          <th class="col-1 align-middle text-center">習熟度</th>
          <th class="col-1 align-middle text-center"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |quest| %>
          <tr>
          <td class="align-middle text-center"><%= quest.id %></td>
          <td><%= simple_format(h(quest.question)) %></td>
          <td><%= simple_format(h(quest.correct)) %></td>
          <td class="align-middle text-center"><%= quest.proficiency %></td>
          <td class="text-center">
            <%= link_to "編集", edit_user_question_path(current_user, quest.id), class: "btn btn-success" %>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
